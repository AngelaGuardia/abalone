<section class="section">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1 class="title">Facilities</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @facilities.each do |facility| %>
          <tr>
            <td><%= facility.name %></td>
            <td><%= facility.code %></td>
            <td><%= link_to 'Show', facility %></td>
            <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
            <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Facility', new_facility_path %>
  </div>
</section>
